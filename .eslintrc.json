{
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "babelrc": false,
      "configFile": false,
      "presets": ["@babel/preset-env"]
    }
  },
  "ignorePatterns": [
    "*.min.js",
    "dist/**/*.js",
    "node_modules/**/*.js"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}